// --------------------------------------------------------
// 1. GENERATOR BLOCK (Standard Mode - No Driver Adapters)
// --------------------------------------------------------
generator client {
  provider = "prisma-client-js"
}

// --------------------------------------------------------
// 2. DATASOURCE BLOCK (Standard Postgres)
// --------------------------------------------------------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------------------------
// 3. YOUR MODELS (Keep your existing models below)
// --------------------------------------------------------

model Business {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  slug        String   @unique
  name        String
  type        String   // "barber", "salon", "spa"
  phone       String   // Owner's phone number for login
  email       String?
  image       String?
  address     String?
  city        String?
  
  isVerified  Boolean  @default(false)
  
  services    Service[]
  staff       Staff[]
  bookings    Booking[]
}

model Service {
  id          String   @id @default(cuid())
  name        String
  duration    Int      // in minutes
  price       Float
  businessId  String
  business    Business @relation(fields: [businessId], references: [id])
  bookings    Booking[]
}

model Staff {
  id          String     @id @default(cuid())
  name        String
  email       String?
  phone       String?
  avatar      String?
  isActive    Boolean    @default(true)
  businessId  String
  business    Business   @relation(fields: [businessId], references: [id])
  schedules   Schedule[]
  timeOffs    TimeOff[]
  bookings    Booking[]
}

model Schedule {
  id          String   @id @default(cuid())
  dayOfWeek   Int      // 0=Sunday, 1=Monday...
  startTime   String   // "09:00"
  endTime     String   // "18:00"
  isWorking   Boolean  @default(true)
  staffId     String
  staff       Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
}

model TimeOff {
  id          String   @id @default(cuid())
  startDate   DateTime
  endDate     DateTime
  reason      String?
  staffId     String
  staff       Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
}

model Booking {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  
  date        DateTime // The specific date of booking
  startTime   String   // "14:00"
  endTime     String   // "14:30" (calculated from duration)
  status      String   @default("PENDING") // PENDING, CONFIRMED, CANCELLED, COMPLETED
  
  customerName  String
  customerPhone String
  customerEmail String?
  notes         String?
  
  serviceId   String
  service     Service  @relation(fields: [serviceId], references: [id])
  
  staffId     String
  staff       Staff    @relation(fields: [staffId], references: [id])
  
  businessId  String
  business    Business @relation(fields: [businessId], references: [id])
}